            var madonhang = $(this).attr("data-madonhang")
            $.ajax({
                url: '/OrderHistory/Details',
                datatype: "json",
                type: "POST",
                data: { id: madonhang },
                async: true,
                success: function (results) {
                    $("#records_tabless").html("");
                    $("#records_tabless").html(results);
                },
                error: function (xhr) {
                    alert('error');
                }
            });
        });
    });
    </script>
}