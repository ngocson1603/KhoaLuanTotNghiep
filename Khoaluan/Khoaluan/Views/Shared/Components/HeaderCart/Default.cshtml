@model List<Khoaluan.ModelViews.CartItem>
@if (Model != null && Model.Count() > 0)
{
<div class="nk-cart-dropdown">
    @foreach (var item in Model)
    {
        string url = $"/Product/HomePage/{item.product.Id}.html";
<div class="nk-widget-post">
    <a href="@url" class="nk-post-image">
        <img src="~/Images/@Url.Content(item.product.Image)" alt="@item.product.Name">
    </a>
    <h3 class="nk-post-title">
        <a href="#" class="nk-cart-remove-item">
            <span class="ion-android-close"></span>
        </a>
        <a href="@url">@item.product.Name</a>
    </h3>
    <div class="nk-gap-1"></div>
    <div class="nk-product-price">€ @item.product.Price</div>
</div>}

    <div class="nk-gap-2"></div>
    <div class="group-btn_wrap d-grid gap-2">
        <a href="/cart.html" class="btn btn-secondary btn-primary-hover">View Cart</a>
        <a href="store-checkout.html" class="btn btn-secondary btn-primary-hover">Checkout</a>
    </div>
</div> }
else
{
<div class="nk-cart-dropdown">
    <div class="nk-widget-post">
        <h3 class="nk-post-title">
            Giỏ hàng rỗng
        </h3>
    </div>
</div>}