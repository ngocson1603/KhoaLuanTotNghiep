<script>
    $(document).ready(function () {
        $(function () {
            $("#keywords").keydown(function (e) {
                var strkeyword = $('#keywords').val();
                //alert(e.keyCode);
                if (e.keyCode == 13) {
                    $.ajax({
                        url: '/SearchPro/FindProducts/',
                        datatype: "json",
                        data: { keyword: strkeyword },
                        async: true,
                        success: function (results) {
                            location.href = "/SearchPro/ListSearch";
                        },
                        error: function (xhr) {
                            alert('error');
                        }
                    });
                }
            });

            $("#keywordss").click(function () {
                var strkeyword = $('#keywords').val();
                $.ajax({
                    url: '/SearchPro/FindProducts/',
                    datatype: "json",
                    data: { keyword: strkeyword },
                    async: false,
                    cache: false,
                    success: function (results) {
                        location.href = "/SearchPro/ListSearch";
                    },
                    error: function (xhr) {
                        alert('error');
                    }
                });
            });
        });
    });
</script>