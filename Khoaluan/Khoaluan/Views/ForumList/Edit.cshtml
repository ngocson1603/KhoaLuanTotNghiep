@model Khoaluan.Models.Discussion

@{
    ViewData["Title"] = "Chỉnh sửa quyền truy cập";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            @*<a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Trang chủ</a>
            <a asp-area="Admin" asp-controller="AdminRoles" asp-action="Index" class="breadcrumb-item">Danh sách quyền truy cập</a>*@
            <span class="breadcrumb-item active">Edit</span>
        </nav>
    </div>
</div>


<form asp-action="Edit" asp-route-id="@Model.postID" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="postID" />
    <input type="hidden" asp-for="CreateDate" />
    <input type="hidden" asp-for="ProductID" />
    <div class="form-group">
        <div class="form-group col-md-6">
            <label class="col-sm-2 col-form-label">Title</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" asp-for="Title" placeholder="Title">
            </div>
        </div>
        <div class="form-group col-md-6">
            <label class="col-sm-2 col-form-label">Content</label>
            <div class="col-sm-6">
                <input type="text" class="form-control" asp-for="Content" placeholder="Content">
            </div>
        </div>
        <div class="form-group col-md-6">
            <div class="col-sm-6">
                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            </div>
        </div>
    </div>
</form>


