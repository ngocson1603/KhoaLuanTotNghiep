@model IEnumerable<Khoaluan.OtpModels.gameRefund>

@{
    ViewData["Title"] = "Refund";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<div class="nk-main">
    <div class="container">
        <div class="row vertical-gap">
            <div class="col-lg-12">
                <!-- START: Recent Galleries-->
                <div class="nk-gap-2"></div>
                <h2 class="nk-decorated-h-2 h3"><span class="text-main-1">Library</span></h2>
                <div class="nk-gap"></div>
                <div class="row vertical-gap">
                    @if (Model != null)
                    {

                        foreach (var item in Model)
                        {

                            string url = $"/Product/HomePage/{item.ProductID}.html";
                            <div class="col-md-6 col-lg-4">
                                <div class="nk-gallery-item-box">
                                    <a href="@url" class="nk-gallery-item">
                                        <span class="nk-gallery-item-overlay"><span><span class="nk-icon-circles"></span></span></span>
                                        <img src="~/Images/@item.Image" alt=@item.Name>
                                    </a>
                                    <div class="nk-gallery-item-label">
                                        <h4 class="mb-0">@item.Name</h4>
                                    </div>
                                </div>
                                <button class="removecart nk-btn nk-btn-rounded nk-btn-color-main-1 float-right" type="submit" data-mahh="@item.ProductID">Refund</button>

                            </div>
                        }

                    }
                </div>
                <!-- END: Recent Galleries -->

            </div>
        </div>
    </div>

</div>




<!-- START: Page Background -->

<img class="nk-page-background-top" src="assets/images/bg-top-3.png" alt="">
<img class="nk-page-background-bottom" src="assets/images/bg-bottom.png" alt="">

<!-- END: Page Background -->

@section Scripts{
    <script>
        $(function () {
            $(".removecart").click(function () {
                var productid = $(this).attr("data-mahh");
                $.ajax({
                    url: "Users/Refund",
                    type: "POST",
                    data: {
                        productID: productid,
                    },
                    async: false,
                    cache: false,
                    success: function (result) {
                        if (result.success) {
                            location.reload();
                        }
                    },
                    error: function (rs) {
                        alert("Error !")
                    }
                });
                window.location.reload();
            });
        });
    </script>
}