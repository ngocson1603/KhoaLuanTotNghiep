@using Khoaluan.OtpModels
@model Khoaluan.Models.Users

@{
    ViewData["Title"] = "Library";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<LibraryDetail> DanhSachDonHang = ViewBag.DonHang;

}
<div class="nk-main">
    <div class="container">
        <div class="row vertical-gap">
            <div class="col-lg-12">
                <!-- START: Recent Galleries-->
                <div class="nk-gap-2"></div>
                <h2 class="nk-decorated-h-2 h3"><span class="text-main-1">Library</span></h2>
                <div class="nk-gap"></div>
                <div class="row vertical-gap">
                    @if (DanhSachDonHang != null)
                    {

                        foreach (var item in DanhSachDonHang)
                        {
                            string url = $"/Product/HomePage/{item.Id}.html";
                            <div class="col-md-4">
                                <div class="nk-gallery-item-group">
                                    <a href="@url" class="nk-gallery-item">
                                        <div class="nk-gallery-item-overlay"><span class="ion-eye"></span></div>
                                        <img src="~/Images/@Url.Content(item.Image)" alt="">
                                    </a>
                                    <div class="nk-gallery-item-description">
                                        <h4 class="nk-gallery-item-description-title h5">@item.Name</h4>
                                        <div class="nk-gallery-item-description-info">
                                            <span class="far fa-image"></span>
                                            <span>58</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button class="removecart nk-btn nk-btn-rounded nk-btn-color-main-1 float-right" type="submit" data-mahh="@item.Id">Refund</button>

                        }

                    }
                </div>
                <!-- END: Recent Galleries -->

            </div>
        </div>
    </div>

</div>




<!-- START: Page Background -->

<img class="nk-page-background-top" src="assets/images/bg-top-3.png" alt="">
<img class="nk-page-background-bottom" src="assets/images/bg-bottom.png" alt="">

<!-- END: Page Background -->

@section Scripts{
    <script>
        $(function () {
            $(".removecart").click(function () {
                var productid = $(this).attr("data-mahh");
                $.ajax({
                    url: "Users/Refund",
                    type: "POST",
                    data: {
                        productID: productid,
                    },
                    async: false,
                    cache: false,
                    success: function (result) {
                        if (result.success) {
                            location.reload();
                        }
                    },
                    error: function (rs) {
                        alert("Error !")
                    }
                });
                window.location.reload();
            });
        });
    </script>
}

