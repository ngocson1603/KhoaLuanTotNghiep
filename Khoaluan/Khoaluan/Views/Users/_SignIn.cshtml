@model Khoaluan.ModelViews.LoginViewModel

<div class="nk-modal modal fade" id="modalLogin" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span class="ion-android-close"></span>
                </button>
                <h4 class="mb-0"><span class="text-main-1">Sign</span> In</h4>
                <div class="nk-gap-1"></div>
                <form method="post" action="@Url.Action("Login", "Users")" class="nk-form text-white">
                    <div class="row vertical-gap">
                        <div class="col-md-12">
                            Use email and password:
                            <div class="nk-gap"></div>
                            <input type="email" value="" name="gmail" class="required form-control" placeholder="Email" required>
                            <div class="nk-gap"></div>
                            <input type="password" value="" name="password" class="required form-control"
                                   placeholder="Password" required>
                        </div>
                    </div>
                    <div class="nk-gap-1"></div>
                    <div class="row vertical-gap">
                        <div class="col-md-6">
                            <input type="submit" value="Sign In" class="nk-btn nk-btn-rounded nk-btn-color-white nk-btn-block" />
                        </div>
                        <div class="col-md-6">
                            <div class="mnt-5">
                                <small><a href="#">Forgot your password?</a></small>
                            </div>
                            <div class="mnt-5">
                                <small>
                                    <a href="#" data-dismiss="modal" data-toggle="modal" data-target="#modalRegister">
                                        Not a member? Sign up
                                    </a>
                                </small>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>