@model Khoaluan.ModelViews.ChangePasswordViewModel

<div class="card">
    <div class="card-header">
        <h4 class="card-title">Change Password</h4>
    </div>
    <div class="card-body">
        @if (User.IsInRole("Admin"))
        {
            <form method="post" action="@Url.Action("ChangePassword", "Admin", new { Area = "Admin" })">
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label class="font-weight-semibold" for="oldPassword">Old Password:</label>
                        <input type="password" value="" asp-for="PasswordNow" class="form-control" id="oldPassword" placeholder="Old Password" required>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="font-weight-semibold" for="newPassword">New Password:</label>
                        <input type="password" value="" asp-for="Password" class="form-control" id="newPassword" placeholder="New Password" required>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="font-weight-semibold" for="confirmPassword">Confirm Password:</label>
                        <input type="password" value="" asp-for="ConfirmPassword" class="form-control" id="confirmPassword" placeholder="Confirm Password" required>
                    </div>
                    <div class="form-group col-md-3">
                        <input type="submit" value="Save change" class="btn btn-primary m-t-30" />
                    </div>
                </div>
            </form>
        }
        else
        {
            <form method="post" action="@Url.Action("ChangePassword", "Dev", new { Area = "Admin" })">
                <div class="form-row">
                    <div class="form-group col-md-3">
                        <label class="font-weight-semibold" for="oldPassword">Old Password:</label>
                        <input type="password" value="" asp-for="PasswordNow" class="form-control" id="oldPassword" placeholder="Old Password" required>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="font-weight-semibold" for="newPassword">New Password:</label>
                        <input type="password" value="" asp-for="Password" class="form-control" id="newPassword" placeholder="New Password" required>
                    </div>
                    <div class="form-group col-md-3">
                        <label class="font-weight-semibold" for="confirmPassword">Confirm Password:</label>
                        <input type="password" value="" asp-for="ConfirmPassword" class="form-control" id="confirmPassword" placeholder="Confirm Password" required>
                    </div>
                    <div class="form-group col-md-3">
                        <input type="submit" value="Save change" class="btn btn-primary m-t-30" />
                    </div>
                </div>
            </form>
        }
    </div>
</div>