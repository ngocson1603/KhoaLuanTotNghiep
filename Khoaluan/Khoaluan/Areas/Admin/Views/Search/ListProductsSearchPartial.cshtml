@using Khoaluan.OtpModels
@model List<Product>
@if (Model != null)
{
    foreach (var item in Model)
    {
        <tr>

            <td>
                @item.Id
            </td>
            <td>
                <div class="d-flex align-items-center">
                    <img class="img-fluid rounded" src="~/Images/@Url.Content(item.Image)" style="max-width: 60px" alt="">
                    <h6 class="m-b-0 m-l-10">@item.Name</h6>
                </div>
            </td>
            <td>@item.DevId</td>
            <td>@item.Price.ToString("#,##0") VNĐ</td>
            <td>1</td>
            <td>
                @if (item.Status == 0)
                {
                    <div class="d-flex align-items-center">
                        <div class="badge badge-success badge-dot m-r-10"></div>
                        <div>pending</div>
                    </div>
                }
                else if (item.Status == 1)
                {
                    <div class="d-flex align-items-center">
                        <div class="badge badge-dot badge-dot m-r-10"></div>
                        <div>accept</div>
                    </div>
                }
                else if (item.Status == 2)
                {
                    <div class="d-flex align-items-center">
                        <div class="badge badge-green badge-dot m-r-10"></div>
                        <div>decline</div>
                    </div>
                }
                else
                {
                    <div class="d-flex align-items-center">
                        <div class="badge badge-geekblue badge-dot m-r-10"></div>
                        <div>release</div>
                    </div>
                }

            <td>
                @if (User.IsInRole("Dev"))
                {
                    <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminProducts" asp-action="Details" asp-route-id="@item.Id">Chi tiết</a>
                }
                else
                {
                    <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminProducts" asp-action="Details" asp-route-id="@item.Id">Chi tiết</a>
                    <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminProducts" asp-action="Edit" asp-route-id="@item.Id">Sửa</a>
                    <a class="btn btn-success btn-tone m-r-5" asp-area="Admin" asp-controller="AdminProducts" asp-action="Delete" asp-route-id="@item.Id">Xóa</a>
                }

            </td>
        </tr>
    }
}